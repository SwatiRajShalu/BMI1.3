<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.BMI12" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="stylesqaurebox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/square_box</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">number</item>
        <item name="android:minWidth">100dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColorHint">@color/edit</item>
        <item name="android:textColor">@color/head</item>

    </style>

    <style name="TextHeightWeight">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/head</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginLeft">90dp</item>
    </style>

    <style name="Theme.BMI12" parent="Base.Theme.BMI12" />
